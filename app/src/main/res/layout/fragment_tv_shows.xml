<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adylanroaffa.wuttuwatch.Fragments.MoviesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:paddingTop="@dimen/wide_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/homesreen_headline"
                android:layout_marginLeft="@dimen/wide_margin"
                android:text="TOP RATED" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/popular_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/wide_margin"/>
                <ProgressBar
                    android:id="@+id/movie_progress_bar"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/popular_item_height"
                    android:layout_width="wrap_content"
                    android:progressTint="@color/colorPrimary"
                    android:progressBackgroundTint="@color/colorPrimaryDark"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/browse_category_tv"
                style="@style/homesreen_headline"
                android:layout_marginLeft="@dimen/wide_margin"
                android:text="BROWSE BY GENRE" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        style="@style/category_card_view"
                        app:cardCornerRadius="@dimen/cardview_default_radius"
                        app:cardElevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </TableRow>

            </TableLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
