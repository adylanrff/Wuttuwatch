<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <android.support.v7.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/small_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_card_height"
        app:cardCornerRadius="8dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:backgroundTint="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/search_result_image_view"

                android:layout_margin="@dimen/wide_margin"
                android:layout_width="@dimen/result_image_width"
                android:layout_height="@dimen/result_image_height"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:layout_marginTop="@dimen/wide_margin"
                android:layout_marginBottom="@dimen/wide_margin"
                android:layout_marginRight="@dimen/wide_margin"
                android:layout_toRightOf="@id/search_result_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:padding="2dp"
                    android:id="@+id/search_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="War of the planet of the Apes"
                    android:textSize="@dimen/title"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/small_margin"

                    android:maxLines="2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textSize="@dimen/subtitle"
                    android:textColor="@color/light_white" />

                <TextView
                    android:id="@+id/search_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textSize="@dimen/subheader"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/small_margin"/>


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textSize="@dimen/subtitle"
                    android:textColor="@color/light_white"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/small_margin">
                    <TextView
                        android:id="@+id/search_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="80/100"
                        android:textSize="@dimen/title"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IMDB"
                        android:textSize="@dimen/subtitle"
                        android:textColor="@color/light_white"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/src_result_continue"
                android:layout_margin="@dimen/small_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See more details"
                    android:textSize="@dimen/subtitle"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_continue"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>