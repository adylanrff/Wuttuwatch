                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="8dp">

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView style="@style/category_image" />

                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView style="@style/category_card_view">

                        <LinearLayout
                            android:layout_width="match_parent"
