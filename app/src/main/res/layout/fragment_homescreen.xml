                            <TextView
                                style="@style/category_tv"
                                android:text="GENRE" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </TableRow>

            </TableLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
